<div class="container">
  <div class="cards">
    <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <div class="card-category"
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
      <% else %>
        <div class="card-category"
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path "92n7t0nwjsbekuy4d65td53129r3", height: 300, crop: :fill %>')">
      <% end %>
          <%= link_to list.name, list_path(list), class:"text-light" %>
        </div>

    <% end %>
  </div>
</div>
<div class="container d-flex justify-content-center">
  <%= link_to "Create a new list", new_list_path, class:"btn btn-outline-dark m-3" %>
</div>
